{
  "hosting": {
    "public": "dist/qr-code",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/qr-code",
        "destination": "/#/qr-code",
        "type": 301
      }
    ]
  }
}
